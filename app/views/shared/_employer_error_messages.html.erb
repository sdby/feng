<% if @employer.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%=pluralize(@employer.errors.count, "error") %>
    </div>
    <ul>
      <% @employer.errors.full_messages.each do |msg| %>
        <li>* <%=msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>