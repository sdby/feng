<%=form_for(@job) do |f| %>
  <%=render 'shared/error_messages', object: f.object %>
  <div class="field">
  	<%=f.text_field :title, placeholder: "Input new job title" %>
  	<%=f.text_area :description, placeholder: "Input new job description" %>
  </div>
  <%=f.submit "Post", class: "btn btn-lg btn-primary" %>
<% end %>