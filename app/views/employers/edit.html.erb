<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%=form_for(@employer) do |f| %>
      <%=render 'shared/employer_error_messages' %>
      <%=f.label :name %>
      <%=f.text_field :name %>
      <%=f.label :email %>
      <%=f.text_field :email %>
  	  <%=f.label :address %>
  	  <%=f.text_field :address %>
  	  <%=f.label :contact %>
  	  <%=f.text_field :contact %>
  	  <%=f.label :phone %>
  	  <%=f.text_field :phone %>
  	  <%=f.label :password %>
  	  <%=f.password_field :password %>
  	  <%=f.label :password_confirmation, "Confirmation" %>
  	  <%=f.password_field :password_confirmation %>
  	  
  	  <%=f.submit "Save changes", class:"btn btn-lg btn-primary" %>
    <% end %>
    <%=gravatar_for @employer %>
    <a href="http://en.gravatar.com/emails/">change</a>
  </div>
</div>