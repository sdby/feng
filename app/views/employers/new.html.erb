<h1>Employer sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<%=form_for(@employer) do |f| %>

      <%=render 'shared/employer_error_messages' %>
      
  	  <%=f.label :name, class: 'control-label' %>
  	  <%=f.text_field :name, class: 'form-control' %>
  	  <%=f.label :email, class: 'control-label' %>
  	  <%=f.text_field :email, class: 'form-control' %>
  	  <%=f.label :address, class: 'control-label' %>
  	  <%=f.text_field :address, class: 'form-control' %>
  	  <%=f.label :contact, class: 'control-label' %>
  	  <%=f.text_field :contact, class: 'form-control' %>
  	  <%=f.label :phone, class: 'control-label' %>
  	  <%=f.text_field :phone, class: 'form-control' %>

  	  <%=f.label :password, class: 'control-label' %>
  	  <%=f.password_field :password, class: 'form-control' %>
  	  <%=f.label :password_confirmation, "Confirmation", class: 'control-label' %>
  	  <%=f.password_field :password_confirmation, class: 'form-control' %>

  	  <%=f.submit "Create my account", class: "btn btn-lg btn-primary" %>
  	<% end %>
  </div>
</div>
