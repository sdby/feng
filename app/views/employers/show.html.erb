<div class="row">
  <aside class="col-md-4">
  	<section>
  	  <h1>
  		<%=gravatar_for @employer %>
  		<%=@employer.name %>
	  </h1>
  	</section>
  </aside>
  <div class="col-md-8">
  	<% if @employer.jobs.any? %>
  	  <h3>Jobs (<%=@employer.jobs.count %>)</h3>
  	  <ol class="jobs">
  	  	<%=render @jobs %>
  	  </ol>
  	  <%=will_paginate @jobs %>
  	<% end %>
  </div>
</div>
